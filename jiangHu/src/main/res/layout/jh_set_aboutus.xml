<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <!-- 关于我们 -->

    <com.sptech.qujj.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.sptech.qujj.view.TitleBar>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="20dp" >

        <ImageView 
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/big_logo" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_version"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="3dp"
            android:text="趣救急是一款即可以用信用卡进行借贷又可以进行投资增值的金融产品，致力于创建简单，快速，安全的消费金融服务平台。"
            android:textColor="@color/text_main"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_contactus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_stro"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/text_assist"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contactus"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/rela_webcat"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/jh_item_colorchange_selector"
                android:clickable="true"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/img_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/img_set_wechat" />

                <TextView
                    android:id="@+id/tv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_wechat"
                    android:text="微信"
                    android:textColor="@color/text_assist"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_wechatname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="趣救急"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/rela_weibo"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/jh_item_colorchange_selector"
                android:clickable="true"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/img_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/img_set_weibo" />

                <TextView
                    android:id="@+id/tv_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_weibo"
                    android:text="微博"
                    android:textColor="@color/text_assist"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_weiboname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="趣救急"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_line" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="如有疑问请拨打客服电话"
            android:textColor="@color/text_assist"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tellnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint"
            android:layout_centerHorizontal="true"
            android:text="400-889-4997"
            android:textColor="@color/text_blue"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tellnum"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Copyright©2014-2015 浙江双鹏信息科技有限公司"
                android:textColor="@color/text_hint"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>