<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
      <!--  选择银行卡   -->
    <com.sptech.qujj.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.sptech.qujj.view.TitleBar>

    <TextView
        android:id="@+id/tv_titlee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleBar"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/text_main"
        android:textSize="18sp"
        android:text="" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_titlee"
        android:layout_below="@+id/tv_titlee"
        android:textColor="@color/text_assist"
        android:textSize="14sp"
        android:text="" />
    <View android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/tv_data"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/gray_1"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_data"
        android:layout_below="@+id/tv_data"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/text_main"
        android:textSize="16sp"
        android:text="" />

</RelativeLayout>
