<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

     <LinearLayout 
         android:id="@+id/linearleft"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
         <RelativeLayout
             android:id="@+id/relatie_image" 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/jh_bottom_line_white"
             android:paddingLeft="10dp"
             android:paddingRight="5dp"
             android:paddingTop="15dp"
             android:paddingBottom="15dp">
         <ImageView 
             android:id="@+id/image_info"
             android:layout_width="45dp"
             android:layout_height="45dp"
             android:layout_centerVertical="true"
             />
         
          <LinearLayout 
             android:id="@+id/linear_info"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/image_info"
             android:layout_marginLeft="10dp"
             android:orientation="vertical"
             android:gravity="center_vertical">
             <TextView 
                 android:id="@+id/tv_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left" 
                 android:textSize="18sp"
                 android:textColor="@color/text_main"
                 android:text="叶冰瑞" />
             <TextView 
                 android:id="@+id/tv_phone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left" 
                 android:textSize="16sp"
                 android:textColor="@color/text_main"
                 android:text="137xxxx5678"/>
          </LinearLayout>
          
          <ImageView
                 android:id="@+id/image_in"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:background="@drawable/jh_rightbtn_selector"/>
         </RelativeLayout>
         
           <LinearLayout 
               android:id="@+id/relative_addyou"
               android:layout_width="fill_parent"
               android:layout_height="45dp"
               android:padding="10dp"
               android:gravity="center_vertical"
               android:background="@drawable/jh_bottom_line_white"
               android:orientation="horizontal" >
             
             <TextView 
                 android:id="@+id/tv_addyou"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="15dp"
                 android:layout_weight="1"
                 android:text="添加账单邮箱"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"
                 />
              <TextView 
                 android:id="@+id/tv_card"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="银行卡(2)"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"
                 />
              
             </LinearLayout>
             
          <RelativeLayout 
             android:id="@+id/relative_kong"
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:background="@drawable/jh_bottom_line_white"
             >
        </RelativeLayout>
         
         <RelativeLayout 
             android:id="@+id/relative_service"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:background="@drawable/jh_bottom_line_white"
             android:paddingLeft="12dp"
             android:paddingRight="5dp"
              >
        
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="服务中心"
                 android:layout_centerVertical="true"
                 android:gravity="center_vertical"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"
                 />
              <ImageView
                 android:id="@+id/image_right"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:background="@drawable/jh_rightbtn_selector"/>
         </RelativeLayout>
         
             <RelativeLayout 
             android:id="@+id/relative_progress"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:background="@drawable/jh_bottom_line_white"
             android:paddingLeft="12dp"
             android:paddingRight="5dp"
              >
        
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="进度中心"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"
                 />
              <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@drawable/jh_rightbtn_selector"/>
         </RelativeLayout>
             
          <RelativeLayout 
             android:id="@+id/relative_licai"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:background="@drawable/jh_bottom_line_white"
             android:paddingLeft="12dp"
             android:paddingRight="5dp"
               >
        
             <TextView 
                 android:id="@+id/tv_licai"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="我要理财"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"
                 />
             
              <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/tv_licai"
                 android:layout_marginLeft="30dp"
                 android:text="年化率8.7%起"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_hint"
                 android:textSize="16sp"
                 />
              <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@drawable/jh_rightbtn_selector"/>
         </RelativeLayout>

         
        <RelativeLayout 
             android:id="@+id/relative_huankuan"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:background="@drawable/jh_bottom_line_white"
             android:paddingLeft="12dp"
             android:paddingRight="5dp"
              >
        
             <TextView 
                 android:id="@+id/tv_huan"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="我要还款"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"
                 />
             
              <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/tv_huan"
                 android:layout_marginLeft="30dp"
                 android:text="欠款额度998.00元"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_hint"
                 android:textSize="16sp"
                 />
              <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@drawable/jh_rightbtn_selector"/>
         </RelativeLayout>
         
         <RelativeLayout 
             android:id="@+id/relative_activity"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:background="@drawable/jh_bottom_line_white"
             android:paddingLeft="12dp"
             android:paddingRight="5dp"
              >
        
             <TextView 
                 android:id="@+id/tv_activity"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="活动中心"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_main"
                 android:textSize="16sp"  />
             
              <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/tv_activity"
                 android:layout_marginLeft="30dp"
                 android:text="XX活动送您588元"
                 android:layout_centerVertical="true"
                 android:textColor="@color/text_hint"
                 android:textSize="16sp"
                 />
              
              <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@drawable/jh_rightbtn_selector"/>
              
         </RelativeLayout>
     </LinearLayout>

</RelativeLayout>