<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color" >

        <RelativeLayout
            android:id="@+id/rela_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/jh_mineproduct_colorchange_selector" >

            <RelativeLayout
                android:id="@+id/rela_topcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/image_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_accumulated_income" />

                <TextView
                    android:id="@+id/tv_leiji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/image_left"
                    android:text=" 累计收益计算  (元 )"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/jh_licai_right_white_selector" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_topcontent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/img_line_wihte" />

        <RelativeLayout
            android:id="@+id/relative_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/linear_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_zuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昨日收益（元）"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_zuovalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_verline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/im_line_white" />

            <LinearLayout
                android:id="@+id/linear_bottomtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_verline"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_zong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总资产（元）"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_zongvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- 我的余额 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/rela_mybalance"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/jh_item_colorchange_selector" >

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="我的余额"
            android:textColor="@color/text_main"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rela_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/tv_bavalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_assist"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_bavalue"
                android:background="@drawable/jh_rightbtn_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:background="@color/gray_line" />
    <!-- 理财资产 -->

    <RelativeLayout
        android:id="@+id/rela_mymoney"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/jh_item_colorchange_selector" >

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="理财资产"
            android:textColor="@color/text_main"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rela_righttwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/tv_zichan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_assist"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_rtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_zichan"
                android:background="@drawable/jh_rightbtn_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:background="@color/gray_line" />

</LinearLayout>