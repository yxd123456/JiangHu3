<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <!-- 账单 -->

    <com.sptech.qujj.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.sptech.qujj.view.TitleBar>

    <RelativeLayout
        android:id="@+id/rela_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:background="@drawable/jh_bottom_line_white"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/rela_top"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="6月代还款申请"
                android:textColor="@color/text_main"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/img_line_grey"
            android:contentDescription="@string/description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_line"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
            <LinearLayout
                android:id="@+id/ll_jyzh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_jiaoyizhanghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="流水号:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_jyzh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xyk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_xyk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用卡:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_xykvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nhsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_nianhuashouyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年化收益:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_nhsy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lcqx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_licaiqixian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="理财期限:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_lcqx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jyje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_jiaoyijine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易金额:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_jyje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jysj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_jiaoyishijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易时间:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_jysj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fksj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_fukuanshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款时间:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_fksj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qrzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_querenzhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认状态:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_qrzt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fkmx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_fukuanmingxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款明细:  "
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_fkmx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/text_assist"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>