<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_simple_thismon_huan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="本月应还"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/china_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_simple_thismon_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18000.000"
            android:textColor="@color/red" />
 <!-- android:background="@drawable/licai_detailinfo_top_selector" -->
        <ImageView
            android:id="@+id/iv_simple_up"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
           
            android:paddingRight="20dp" />
    </LinearLayout>

    <!-- <ImageView
        android:id="@+id/iv_simple_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/licai_detailinfo_bottom_selector"
        android:paddingRight="20dp"
        android:visibility="gone" /> -->

</RelativeLayout>